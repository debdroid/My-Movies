<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_detail_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/m_design_space_between_content_area"
    android:paddingEnd="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingStart="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingBottom="@dimen/m_design_space_between_content_area">
    <TextView
        android:id="@+id/movie_detail_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/primary_text"
        android:textIsSelectable="true" />
    <LinearLayout
        android:layout_below="@id/movie_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/movie_detail_mpaa_image"
            android:layout_width="@dimen/detail_today_layout_mppa_image_size"
            android:layout_height="@dimen/detail_today_layout_mppa_image_size"
            android:scaleType="fitXY"
            android:contentDescription="@string/movie_detail_mpaa_image_content_description"/>
        <TextView
            android:id="@+id/movie_detail_title_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/m_design_screen_edge_left_right_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text"
            tools:ignore="RtlSymmetry"
            android:textIsSelectable="true" />
        <TextView
            android:id="@+id/movie_detail_title_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text"
            android:textIsSelectable="true" />
    </LinearLayout>
</RelativeLayout>