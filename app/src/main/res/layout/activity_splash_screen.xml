<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary" >

    <ImageView
        android:id="@+id/splash_screen_logo"
        android:layout_width="@dimen/splash_logo_height_width"
        android:layout_height="@dimen/splash_logo_height_width"
        android:layout_centerInParent="true"
        android:contentDescription="@string/splash_screen_logo_content_description"
        android:src="@drawable/movie_magic_logo" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/splash_screen_app_name_bottom_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/accent"
            android:gravity="center_horizontal"
            android:text="@string/app_name" />

        <ImageView
            android:layout_width="@dimen/splash_screen_powered_by_image_width"
            android:layout_height="@dimen/splash_screen_powered_by_image_height"
            android:layout_marginTop="@dimen/splash_screen_powered_by_image_top_margin"
            android:layout_gravity="center"
            android:src="@drawable/tmdb_powered_by"/>
    </LinearLayout>
</RelativeLayout>